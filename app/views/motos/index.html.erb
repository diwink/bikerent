<h1>Available Motorcycles</h1>

<div class="row">
  <div class="col-lg-6 col-sm-8">
    <% @motos.each do |moto| %>
      <div class="card-moto mt-3">
        <% if moto.photo.attached? %>
          <%= cl_image_tag moto.photo.key %>
        <% else %>
          <p>No pic!</p>
        <% end %>
        <div class="card-moto-infos d-flex flex-grow-1 justify-content-between">
          <div>
            <h2><%= link_to moto.brand, moto_path(moto) %></h2>
             <p><%= moto.model %></p>
          </div>
    <div>
      <h2 class="mb-2"><%= moto.address %></h2>
      <h2 class="price"><%= moto.price_per_day %>â‚¬</h2>
    </div>
    </div>
      </div>
    <% end %>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
</div>



