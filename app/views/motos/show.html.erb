        <% end %>
          </div>
        </div>
        <div class="map flex-grow-1">
          <h2>A map !!!!!!!!!!!</h2>
        </div>
      </div>
      <div class="description">
      <h2><%= @moto.description%></h2>
      </div>
    </div>

   </div>

  <div class="">
    <div class="profil">
      <h2>Renter Profil</h2>
    </div>
    <div class="mx-auto" style="width: 200px;">
      <%= link_to "Book Now !", new_moto_rent_path(@moto), class:"btn btn-primary "  %>
    </div>
  </div>

</div>


