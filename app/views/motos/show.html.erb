<div class="d-flex justify-content-between">
  <div>
    <div class=>
      <div class="d-flex">
        <div class="">
          <div class="brand">
            <h2><%= @moto.brand%> <%= @moto.model%></h2>
          </div>
          <div class="photo">
            <% if @moto.photo.attached? %>
          <%= cl_image_tag @moto.photo.key, width: 400, height: 300, crop: :fill %>
